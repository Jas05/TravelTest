@model Travel.Web.ViewModels.ActivityViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Activities</h2>
<div>
    @foreach (var activity in Model.Activities)
    {
        <div class="row">
            <div class="col-xs-3">

            </div>
            <div class="col-xs-9">
                <div>
                    <h3>@activity.Name</h3>
                </div>
                <div class="col-xs-12">
                    <div class="col-xs-7">
                        @activity.Description
                    </div>
                    <div class="col-xs-5">
                        @activity.PriceGBP
                    </div>
                </div>

            </div>
        </div>
    }
</div>
