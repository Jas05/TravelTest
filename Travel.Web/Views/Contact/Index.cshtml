
@{
    ViewBag.Title = "Contact Us";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row" style="margin-top: 20px;">
    <div class="col-xs-12">
        <h2>Contact Us</h2>
    </div>
</div>
<form id="contact_form" action="#" method="POST" enctype="multipart/form-data">
    <div class="form-group">
        <label for="name">Before travel</label>
    </div>
    <div class="form-group">
        <label for="name">Booking ref:</label>
        <input id="name" class="form-control" name="name" type="text" value="" size="30" />
    </div>
    <div class="form-group">
        <label for="email">Subject:</label>
        <input id="email" class="form-control" name="email" type="text" value="" size="30" />
    </div>
    <div class="form-group">
        <label for="message">Description:</label>
        <textarea id="message" class="form-control" name="message" rows="7" cols="32"></textarea>
    </div>
    <div class="form-group">
        <label for="message">Email Address:</label><br />
        <input id="message" class="form-control" name="message" size="30" />
    </div>
    <div class="form-group">
        <input id="submit_button" type="submit" value="Submit" />
    </div>
    <div class="form-group">
        <label for="name">In Resort</label>
    </div>
    <div class="form-group">
        <label for="phone">Phone: 02033848453</label>
    </div>
    <div class="form-group">
        <label for="message">Live Chat:</label>
    </div>
    <div class="form-group">
        <div class="col-xs-12">
            <img src="~/Content/img/Live chat_1.jpg" />
        </div>
    </div>
</form>