@model Travel.Web.ViewModels.DetailsViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Details</h2>
<div class="row">
    <div class="col-xs-12">
        <img src="~/Content/img/Beach_hotels_landscape.jpg" style="width:100%;" class="img-responsive" />
    </div>
</div>
<div class="row text-center" style="margin-top:10px;margin-bottom:30px">
    <div class="col-xs-4 hero-feature">
        <a href="@Url.Action("Index", "Itinerary")">
            <div class="thumbnail">
                <img class="img-responsive" style="margin: 0 auto" src="~/Content/img/itenary.png" />
                <div class="caption">
                    <h3><a href="@Url.Action("Index", "Itinerary")">Itinerary</a></h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col-xs-4 hero-feature">
        <a href="@Url.Action("Index", "Activity")">
            <div class="thumbnail">
                <img class="img-responsive" style="margin: 0 auto" src="~/Content/img/activities.png" />
                <div class="caption">
                    <h3><a href="@Url.Action("Index", "Activity")">Activity</a></h3>
                </div>
            </div>
        </a>
    </div>

    <div class="col-xs-4  hero-feature">
        <a href="@Url.Action("Index", "Alerts")">
            <div class="thumbnail">
                <img class="img-responsive" style="margin: 0 auto" src="~/Content/img/notifications.png" />
                <div class="caption">
                    <h3><a href="@Url.Action("Index", "Alerts", new { bookingId = Model.BookingId })">Alerts</a></h3>
                </div>
            </div>
        </a>
    </div>

    <div  class="col-xs-12" style="margin-top:10px;display:inline-block; padding-left:0; padding-right:0">

        <div class="col-xs-4 hero-feature">
            <a href="@Url.Action("Index", "Weather")">
                <div class="thumbnail">
                    <img class="img-responsive" style="margin: 0 auto" src="~/Content/img/weather.png" />
                    <div class="caption">
                        <h3><a href="@Url.Action("Index", "Weather")">Weather</a></h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xs-4 hero-feature">
            <a href="@Url.Action("Index", "Map")">
                <div class="thumbnail">
                    <img class="img-responsive" style="margin: 0 auto" src="~/Content/img/map.png" />
                    <div class="caption">
                        <h3><a href="@Url.Action("Index", "Map")">Map</a></h3>
                    </div>
                </div>
            </a>
        </div>

        <div class="col-xs-4 hero-feature">
            <a href="@Url.Action("Index", "Contact")">
                <div class="thumbnail">
                    <img class="img-responsive" style="margin: 0 auto" src="~/Content/img/contactus.jpg" />
                    <div class="caption">
                        <h3><a href="@Url.Action("Index", "Contact")">Contact</a></h3>
                    </div>
            </div>
        </a>
    </div>
  
        
    </div>
    
</div>
